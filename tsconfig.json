{
  "ts-node": {
    "files": true,
    "esm": true
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist"
  },
  "watchOptions": {
    "watchDirectory": "useFsEvents",
    "excludeDirectories": ["**/node_modules", "**/.git"]
  }
}
