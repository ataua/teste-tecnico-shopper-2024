generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Measure {

  measure_uuid     String      @id @default(uuid())
  measure_datetime DateTime    @db.Date
  measure_value    Int
  measure_type     MeasureType
  has_confirmed    Boolean     @default(false)
  customer_code    String

}

enum MeasureType {
  WATER
  GAS
}
